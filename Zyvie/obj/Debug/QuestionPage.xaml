<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestfulApplication.Universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="Zyvie.QuestionPage"
    xmlns:Core="using:Zyvie.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <Core:QuestionPageViewModel />
    </Page.DataContext>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock Text="Žyvie" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="10,130.167,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Quiz.CurrentQuestion.Title}" VerticalAlignment="Top" Height="89" Width="380" RequestedTheme="Dark" Foreground="#FFC99852" FontSize="14" FontWeight="Bold" FontFamily="Aharoni" TextAlignment="Justify" />
        <Button x:ConnectionId='1' x:Name="Answer1" Content="{Binding Quiz.CurrentQuestion.AnswersList[0].Body}" HorizontalAlignment="Left" Margin="10,234.833,0,0" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Height="115" Width="185" CommandParameter="{Binding Quiz.CurrentQuestion.AnswersList[0].IsRight}"                      />
        <Button x:ConnectionId='2' x:Name="Answer2" Content="{Binding Quiz.CurrentQuestion.AnswersList[1].Body}" HorizontalAlignment="Left" Margin="205,234.833,0,0" Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" Height="115" Width="185" CommandParameter="{Binding Quiz.CurrentQuestion.AnswersList[1].IsRight}"                     />
        <Button x:ConnectionId='3' x:Name="Answer3" Content="{Binding Quiz.CurrentQuestion.AnswersList[2].Body}" HorizontalAlignment="Left" Margin="10,336.833,0,-1" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Height="115" Width="185" CommandParameter="{Binding Quiz.CurrentQuestion.AnswersList[2].IsRight}"                     />
        <Button x:ConnectionId='4' x:Name="Answer4" Content="{Binding Quiz.CurrentQuestion.AnswersList[3].Body}" HorizontalAlignment="Left" Margin="205,336.833,0,-1" Grid.Row="2" Grid.Column="2" VerticalAlignment="Top" Height="115" Width="185" CommandParameter="{Binding Quiz.CurrentQuestion.AnswersList[3].IsRight}"                     />
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="10,10.167,0,0" Grid.Row="1" VerticalAlignment="Top" Width="380"/>

        <!--TODO: Content should be placed within the following grid-->
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Next">
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

