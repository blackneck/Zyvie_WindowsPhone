        <Button x:ConnectionId='1' Content="Зноў" FontFamily="Aharoni" FontSize="36" Foreground="#FFC99852" HorizontalAlignment="Center" Margin="144,340,147,235" BorderThickness="1"                      VerticalAlignment="Center" Height="65" Padding="9.5,4.5,9.5,2.5"/>
        <Grid>

        </Grid>
